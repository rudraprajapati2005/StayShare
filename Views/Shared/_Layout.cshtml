<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - StayShare</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- Navbar -->
    <nav id="navbar" class="fixed top-0 left-0 w-full z-50 bg-white bg-opacity-90 backdrop-blur-md shadow-md transition duration-300">
        <div class="container mx-auto px-4 py-3 flex items-center justify-between">
            <!-- Brand -->
            <a asp-controller="Home" asp-action="Index" class="text-orange-500 text-2xl font-bold">StayShare</a>

            <!-- Links -->
            <div class="hidden md:flex space-x-6 items-center">
                <a asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-orange-500">Home</a>
                @{
                    var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
                }
                @if (string.IsNullOrEmpty(role) || !(role == "Owner" || role == "Host"))
                {
                    <a asp-controller="Property" asp-action="Search" class="text-gray-700 hover:text-orange-500">Find Stays</a>
                }
                @if (string.Equals(role, "Resident", StringComparison.OrdinalIgnoreCase))
                {
                    <a asp-controller="Booking" asp-action="MyBookings" class="text-gray-700 hover:text-orange-500">My Bookings</a>
                }
                <a asp-controller="Home" asp-action="About" class="text-gray-700 hover:text-orange-500">About</a>
                <a asp-controller="Home" asp-action="Contact" class="text-gray-700 hover:text-orange-500">Contact</a>
                @if (User.Identity.IsAuthenticated)
                {
                    @if (role == "Owner" || role == "Host")
                    {
                        <a asp-controller="Property" asp-action="Index" class="text-gray-700 hover:text-orange-500">My Properties</a>
                        <a asp-controller="Booking" asp-action="Incoming" class="relative text-gray-700 hover:text-orange-500 flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                                <path d="M2 5a2 2 0 012-2h12a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm2 0l6 4 6-4H4z" />
                            </svg>
                            Messages
                            <span id="pending-count" class="ml-1 inline-flex items-center justify-center text-xs font-bold rounded-full bg-red-500 text-white px-1.5 py-0.5" style="display:none;">0</span>
                        </a>
                    }
                }
            </div>

            <!-- Auth Buttons -->
            <div class="flex items-center space-x-3">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Auth" asp-action="Profile" class="text-gray-700 hover:text-orange-500">Profile</a>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                        <button type="submit" class="bg-orange-500 hover:bg-orange-600 text-white px-3 py-1 rounded-md">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Auth" asp-action="Login" class="border border-orange-500 text-orange-500 px-3 py-1 rounded-md hover:bg-orange-500 hover:text-white transition">Sign In</a>
                    <a asp-controller="Auth" asp-action="Register" class="bg-orange-500 text-white px-3 py-1 rounded-md hover:bg-orange-600 transition">Sign Up</a>
                }
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button id="mobile-menu-button" class="text-gray-700 focus:outline-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden px-4 pt-2 pb-4 space-y-2">
            <a asp-controller="Home" asp-action="Index" class="block text-gray-700 hover:text-orange-500">Home</a>
            @{
                var mrole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "";
            }
            @if (string.IsNullOrEmpty(mrole) || !(mrole == "Owner" || mrole == "Host"))
            {
                <a asp-controller="Property" asp-action="Search" class="block text-gray-700 hover:text-orange-500">Find Stays</a>
            }
            @if (string.Equals(mrole, "Resident", StringComparison.OrdinalIgnoreCase))
            {
                <a asp-controller="Booking" asp-action="MyBookings" class="block text-gray-700 hover:text-orange-500">My Bookings</a>
            }
            <a asp-controller="Home" asp-action="About" class="block text-gray-700 hover:text-orange-500">About</a>
            <a asp-controller="Home" asp-action="Contact" class="block text-gray-700 hover:text-orange-500">Contact</a>
            @if (User.Identity.IsAuthenticated)
            {
                @if (mrole == "Owner" || mrole == "Host")
                {
                    <a asp-controller="Property" asp-action="Index" class="block text-gray-700 hover:text-orange-500">My Properties</a>
                    <a asp-controller="Booking" asp-action="Incoming" class="flex items-center text-gray-700 hover:text-orange-500">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M2 5a2 2 0 012-2h12a2 2 0 012 2v10a2 2 0 01-2 2H4a2 2 0 01-2-2V5zm2 0l6 4 6-4H4z" />
                        </svg>
                        Messages <span id="pending-count-mobile" class="ml-1 inline-flex items-center justify-center text-xs font-bold rounded-full bg-red-500 text-white px-1.5 py-0.5" style="display:none;">0</span>
                    </a>
                }
            }
        </div>
    </nav>


    <!-- Page Content -->
    <div class="container mx-auto px-4 mt-6">
        @RenderBody()
    </div>

    <footer class="bg-white mt-12 border-t border-orange-500 text-center py-4">
        StayShare © 2025
    </footer>

    <script>
        // Toggle mobile menu
        const btn = document.getElementById('mobile-menu-button');
        const menu = document.getElementById('mobile-menu');
        btn.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });

        // Fetch pending messages count for owner/host
        async function loadPendingCount() {
            try {
                const res = await fetch('/Booking/PendingCount');
                const data = await res.json();
                const badge = document.getElementById('pending-count');
                const badgeMobile = document.getElementById('pending-count-mobile');
                if (!badge || !badgeMobile) return;
                if (data.count && data.count > 0) {
                    badge.textContent = data.count;
                    badge.style.display = 'inline-flex';
                    badgeMobile.textContent = data.count;
                    badgeMobile.style.display = 'inline-flex';
                } else {
                    badge.style.display = 'none';
                    badgeMobile.style.display = 'none';
                }
            } catch (e) {
                // ignore
            }
        }
        loadPendingCount();
        setInterval(loadPendingCount, 30000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>