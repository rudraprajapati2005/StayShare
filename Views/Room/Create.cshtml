@model StayShare.Models.Room
@{
    ViewData["Title"] = "Add Room";
}

<div class="min-h-screen bg-gray-100 py-10 px-6">
    <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-8">
        <h1 class="text-3xl font-bold text-orange-600 mb-6">Add Room to @ViewBag.PropertyName</h1>

        <form asp-controller="Room" asp-action="Create" method="post" class="space-y-6">
            <input type="hidden" name="propertyId" value="@ViewBag.PropertyId" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Room Number -->
                <div>
                    <label asp-for="RoomNumber" class="block text-sm font-medium text-gray-700 mb-2">Room Number</label>
                    <input asp-for="RoomNumber" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500" placeholder="e.g., 101, A1, etc." />
                    <span asp-validation-for="RoomNumber" class="text-red-500 text-sm"></span>
                </div>

                <!-- Room Type -->
                <div>
                    <label asp-for="RoomType" class="block text-sm font-medium text-gray-700 mb-2">Room Type</label>
                    <select asp-for="RoomType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500">
                        <option value="">Select Type</option>
                        <option value="Single">Single</option>
                        <option value="Double">Double</option>
                        <option value="Triple">Triple</option>
                        <option value="Quad">Quad</option>
                        <option value="Dormitory">Dormitory</option>
                    </select>
                    <span asp-validation-for="RoomType" class="text-red-500 text-sm"></span>
                </div>

                <!-- Rent Per Month -->
                <div>
                    <label asp-for="RentPerMonth" class="block text-sm font-medium text-gray-700 mb-2">Rent Per Month (â‚¹)</label>
                    <input asp-for="RentPerMonth" type="number" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500" placeholder="e.g., 5000" />
                    <span asp-validation-for="RentPerMonth" class="text-red-500 text-sm"></span>
                </div>

                <!-- Capacity -->
                <div>
                    <label asp-for="Capacity" class="block text-sm font-medium text-gray-700 mb-2">Capacity (Persons)</label>
                    <input asp-for="Capacity" type="number" min="1" max="10" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500" placeholder="e.g., 2" />
                    <span asp-validation-for="Capacity" class="text-red-500 text-sm"></span>
                </div>

                <!-- Amenities -->
                <div class="md:col-span-2">
                    <label asp-for="Amenities" class="block text-sm font-medium text-gray-700 mb-2">Room Amenities</label>
                    <textarea asp-for="Amenities" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-orange-500" placeholder="AC, WiFi, TV, Wardrobe, etc. (comma-separated)"></textarea>
                    <span asp-validation-for="Amenities" class="text-red-500 text-sm"></span>
                </div>

                <!-- Availability -->
                <div class="md:col-span-2">
                    <div class="flex items-center">
                        <input asp-for="IsAvailable" type="checkbox" class="h-4 w-4 text-orange-600 focus:ring-orange-500 border-gray-300 rounded" />
                        <label asp-for="IsAvailable" class="ml-2 block text-sm text-gray-900">
                            Room is available for rent
                        </label>
                    </div>
                    <span asp-validation-for="IsAvailable" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <!-- Submit Buttons -->
            <div class="flex justify-end space-x-4 pt-6">
                <a href="/Property/Details/@ViewBag.PropertyId" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-2 bg-orange-500 text-white rounded-md hover:bg-orange-600 transition">
                    Add Room
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
