@model IEnumerable<StayShare.Models.Property>
@{
    ViewData["Title"] = "Search Results";
}

<div class="min-h-screen bg-gray-100 py-10 px-6">
    <div class="max-w-7xl mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-gray-800">Found @Model.Count() properties</h1>
            <a href="/Property/Search" class="text-orange-600 hover:underline">Modify search</a>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var property in Model)
                {
                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                        @if (!string.IsNullOrEmpty(property.ThumbnailCoverPath))
                        {
                            <img src="@property.ThumbnailCoverPath" class="h-40 w-full object-cover" />
                        }
                        else
                        {
                            <div class="h-40 bg-gray-200"></div>
                        }
                        <div class="p-4">
                            <div class="flex justify-between items-center">
                                <h3 class="text-lg font-semibold">@property.Name</h3>
                                <span class="text-xs bg-gray-100 px-2 py-1 rounded">@property.Type</span>
                            </div>
                            <div class="text-sm text-gray-600 mt-2">@property.City, @property.State</div>
                            <div class="mt-3 flex space-x-2">
                                <a href="/Property/Details/@property.PropertyId" class="text-sm px-3 py-1 bg-blue-500 text-white rounded">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center text-gray-600 py-20">No properties found in the selected area.</div>
        }
    </div>
</div>


