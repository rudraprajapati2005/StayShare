@model StayShare.Models.BookingRequest
@{
    ViewData["Title"] = "Request to Book";
    var room = ViewBag.Room as StayShare.Models.Room;
}

<div class="min-h-screen bg-gray-100 py-10 px-6">
    <div class="max-w-xl mx-auto bg-white shadow-md rounded-lg p-8">
        <h1 class="text-2xl font-bold text-orange-600 mb-4">Request to Book</h1>
        <div class="text-sm text-gray-700 mb-4">
            <div><strong>Property:</strong> @room?.Property?.Name</div>
            <div><strong>Room:</strong> @room?.RoomNumber (@room?.RoomType)</div>
            <div><strong>Rent:</strong> â‚¹@room?.RentPerMonth / month</div>
        </div>

        <form asp-controller="Booking" asp-action="Create" method="post" class="space-y-4">
            <input type="hidden" asp-for="RoomId" />

            <div>
                <label asp-for="MoveInDate" class="block text-sm font-medium text-gray-700 mb-1">Move-in Date</label>
                <input asp-for="MoveInDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                <span asp-validation-for="MoveInDate" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label asp-for="Months" class="block text-sm font-medium text-gray-700 mb-1">Months of Stay</label>
                <input asp-for="Months" type="number" min="1" max="36" class="w-full px-3 py-2 border border-gray-300 rounded-md" />
                <span asp-validation-for="Months" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label asp-for="Note" class="block text-sm font-medium text-gray-700 mb-1">Note (optional)</label>
                <textarea asp-for="Note" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md" placeholder="Any special requests or questions"></textarea>
                <span asp-validation-for="Note" class="text-red-500 text-xs"></span>
            </div>

            <div class="flex justify-end gap-2 pt-2">
                <a href="/Property/Details/@room?.PropertyId" class="px-4 py-2 border border-gray-300 rounded">Cancel</a>
                <button type="submit" class="px-5 py-2 bg-orange-500 text-white rounded hover:bg-orange-600">Send Request</button>
            </div>
        </form>
    </div>
</div>



