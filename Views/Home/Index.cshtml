@{
    ViewData["Title"] = "Welcome to StayShare";
}

<div class="pt-28 text-center px-4 md:px-0">
    <!-- Hero Section -->
    <h1 class="text-4xl md:text-5xl font-bold text-orange-500 mb-4">Find Your Perfect Stay</h1>
    <p class="text-gray-700 text-lg md:text-xl mb-8">
        Discover PGs, hostels, and shared rooms in your preferred location. Join rooms or list your own space easily.
    </p>

    <div class="flex justify-center space-x-4 mb-12">
        <a href="/Room" class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-md transition">Browse Rooms</a>
        <a href="/Room/Create" class="border border-orange-500 text-orange-500 px-6 py-3 rounded-md hover:bg-orange-500 hover:text-white transition">List Your Room</a>
    </div>

    <!-- Features Section -->
    <div class="grid md:grid-cols-3 gap-8 text-center mb-16">
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
            <div class="text-5xl mb-4">🏨</div>
            <h3 class="text-xl font-semibold text-orange-500 mb-2">Browse Rooms</h3>
            <p class="text-gray-700">Search rooms, hostels, or PGs by location and availability.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
            <div class="text-5xl mb-4">👥</div>
            <h3 class="text-xl font-semibold text-orange-500 mb-2">Join Roommates</h3>
            <p class="text-gray-700">Check available slots and join existing rooms comfortably.</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition">
            <div class="text-5xl mb-4">📝</div>
            <h3 class="text-xl font-semibold text-orange-500 mb-2">List Your Space</h3>
            <p class="text-gray-700">Own a room? List it so others can find and join easily.</p>
        </div>
    </div>

    <!-- Owner / Seeker Section -->
    <div class="bg-orange-50 p-12 rounded-lg text-center mb-16">
        <h2 class="text-3xl font-bold text-orange-500 mb-4">Are You a Room Owner or Looking for Stay?</h2>
        <p class="text-gray-700 mb-6">
            If you own a room, you can list it for potential roommates. If you are looking for a room, explore available stays nearby.
        </p>
        <div class="flex justify-center space-x-4">
            <a href="/Room/Create" class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-3 rounded-md transition">I Own a Room</a>
            <a href="/Room" class="border border-orange-500 text-orange-500 px-6 py-3 rounded-md hover:bg-orange-500 hover:text-white transition">I am Looking for Stay</a>
        </div>
    </div>

    <!-- Newsletter Section -->
    <div class="bg-white p-12 rounded-lg shadow-md text-center mb-16">
        <h2 class="text-3xl font-bold text-orange-500 mb-4">Subscribe to Our Newsletter</h2>
        <p class="text-gray-700 mb-6">Get updates on new rooms, hostels, and PGs available in your area.</p>
        <form class="flex flex-col md:flex-row justify-center items-center gap-4">
            <input type="email" placeholder="Enter your email" class="px-4 py-2 border border-gray-300 rounded-md w-full md:w-1/3 focus:outline-orange-500" />
            <button type="submit" class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-2 rounded-md transition w-full md:w-auto">Subscribe</button>
        </form>
    </div>
</div>
