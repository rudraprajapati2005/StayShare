@model StayShare.Models.EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
    var profile = Model.Profile ?? new StayShare.Models.UserProfile { UserId = Model.UserId };
}

<div class="min-h-screen bg-gray-100 py-6 px-4">
    <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-orange-600 mb-2">Edit Profile</h1>
                    <p class="text-gray-600">Update your profile information</p>
                </div>
                <a asp-action="Index1" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded transition">
                    Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Error Messages -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-6 bg-red-100 border border-red-300 text-red-700 px-4 py-3 rounded">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-action="EditProfile" method="post" enctype="multipart/form-data" class="space-y-6">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Email)
            
            <!-- Basic Information -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">Basic Information</h2>
                
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-4">
                    <div>
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                        <input asp-for="FullName" placeholder="John Doe" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                        <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                        <div class="px-3 py-2 bg-gray-100 border border-gray-300 rounded-md">
                            <span class="text-gray-800 font-medium">@Model.Email</span>
                            <p class="text-sm text-gray-500 mt-1">Email cannot be changed after registration</p>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
                        <div class="px-3 py-2 bg-gray-100 border border-gray-300 rounded-md">
                            <span class="text-gray-800 font-medium">@Model.Role</span>
                            <p class="text-sm text-gray-500 mt-1">Role cannot be changed after registration</p>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Member Since</label>
                        <div class="px-3 py-2 bg-gray-100 border border-gray-300 rounded-md">
                            <span class="text-gray-800">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Personal Information -->
                <div class="bg-white shadow-md rounded-lg p-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-4">Personal Information</h2>
                    
                    <div class="space-y-4">
                        <div>
                            <label asp-for="Profile.Gender" class="block text-sm font-medium text-gray-700 mb-1">Gender</label>
                            <select asp-for="Profile.Gender" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200">
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Profile.Gender" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Profile.DateOfBirth" class="block text-sm font-medium text-gray-700 mb-1">Date of Birth</label>
                            <input asp-for="Profile.DateOfBirth" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                            <span asp-validation-for="Profile.DateOfBirth" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Profile.ContactNumber" class="block text-sm font-medium text-gray-700 mb-1">Contact Number</label>
                            <input asp-for="Profile.ContactNumber" placeholder="+91 9876543210" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                            <span asp-validation-for="Profile.ContactNumber" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Profile Picture</label>
                            
                            <!-- Current Profile Image Display -->
                            @if (!string.IsNullOrEmpty(Model.Profile?.ProfileImageUrl))
                            {
                                <div class="mb-3">
                                    <p class="text-sm text-gray-600 mb-2">Current Profile Picture:</p>
                                    <img src="@Model.Profile.ProfileImageUrl" alt="Current Profile" class="w-20 h-20 rounded-full object-cover border-2 border-gray-300" />
                                </div>
                            }
                            
                            <!-- File Upload -->
                            <div class="space-y-3">
                                <div>
                                    <label for="profileImageFile" class="block text-sm font-medium text-gray-700 mb-1">Upload New Profile Picture</label>
                                    <input type="file" id="profileImageFile" name="profileImageFile" accept="image/*" 
                                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                                    <p class="text-xs text-gray-500 mt-1">Supported formats: JPG, PNG, GIF. Max size: 5MB</p>
                                </div>
                                
                                <!-- Alternative: URL Input -->
                                <div>
                                    <label asp-for="Profile.ProfileImageUrl" class="block text-sm font-medium text-gray-700 mb-1">Or enter image URL</label>
                                    <input asp-for="Profile.ProfileImageUrl" placeholder="https://example.com/image.jpg" 
                                           class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                                    <span asp-validation-for="Profile.ProfileImageUrl" class="text-red-500 text-sm"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Preferences -->
                <div class="bg-white shadow-md rounded-lg p-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-4">Preferences</h2>
                    
                    <div class="space-y-4">
                        <div>
                            <label asp-for="Profile.PreferredGender" class="block text-sm font-medium text-gray-700 mb-1">Preferred Gender for Roommate</label>
                            <select asp-for="Profile.PreferredGender" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200">
                                <option value="">No Preference</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Profile.PreferredGender" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Profile.MaxBudget" class="block text-sm font-medium text-gray-700 mb-1">Maximum Budget (â‚¹)</label>
                            <input asp-for="Profile.MaxBudget" type="number" placeholder="10000" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                            <span asp-validation-for="Profile.MaxBudget" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Profile.PreferredLocation" class="block text-sm font-medium text-gray-700 mb-1">Preferred Location</label>
                            <input asp-for="Profile.PreferredLocation" placeholder="Near College, City Center, etc." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                            <span asp-validation-for="Profile.PreferredLocation" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="Profile.Interests" class="block text-sm font-medium text-gray-700 mb-1">Interests</label>
                            <input asp-for="Profile.Interests" placeholder="Sports, Music, Reading, etc." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                            <span asp-validation-for="Profile.Interests" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bio and Verification -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">Bio & Verification</h2>
                
                <div class="space-y-4">
                    <div>
                        <label asp-for="Profile.Bio" class="block text-sm font-medium text-gray-700 mb-1">Bio</label>
                        <textarea asp-for="Profile.Bio" rows="4" placeholder="Tell us about yourself..." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200"></textarea>
                        <span asp-validation-for="Profile.Bio" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="flex items-center space-x-4">
                        <div class="flex items-center">
                            <input asp-for="Profile.IsCollegeVerified" type="checkbox" class="h-4 w-4 text-orange-600 focus:ring-orange-500 border-gray-300 rounded" />
                            <label asp-for="Profile.IsCollegeVerified" class="ml-2 block text-sm text-gray-700">
                                College Verified
                            </label>
                        </div>
                    </div>

                    <div>
                        <label asp-for="Profile.CollegeIdImageUrl" class="block text-sm font-medium text-gray-700 mb-1">College ID Image URL</label>
                        <input asp-for="Profile.CollegeIdImageUrl" placeholder="https://example.com/college-id.jpg" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                        <span asp-validation-for="Profile.CollegeIdImageUrl" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end space-x-4">
                <a asp-action="Index1" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-2 rounded transition">
                    Cancel
                </a>
                <button type="submit" class="bg-orange-500 hover:bg-orange-600 text-white px-6 py-2 rounded transition">
                    Update Profile
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/editprofile-validation.js"></script>
}
