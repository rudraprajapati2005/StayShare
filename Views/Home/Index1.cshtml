@{
    ViewData["Title"] = "Dashboard";
    var user = ViewBag.User as StayShare.Models.User;
    var profile = ViewBag.Profile as StayShare.Models.UserProfile;
}

<div class="min-h-screen bg-gray-100 py-6 px-4">
    <div class="max-w-6xl mx-auto">
        <!-- Header -->
        <div class="bg-white shadow-md rounded-lg p-6 mb-6">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <!-- Profile Picture -->
                    <div class="flex-shrink-0">
                        @if (!string.IsNullOrEmpty(profile?.ProfileImageUrl))
                        {
                            <img src="@profile.ProfileImageUrl" alt="Profile Picture" class="w-16 h-16 rounded-full object-cover border-4 border-orange-200" />
                        }
                        else
                        {
                            <div class="w-16 h-16 rounded-full bg-orange-100 flex items-center justify-center border-4 border-orange-200">
                                <svg class="w-8 h-8 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                                </svg>
                            </div>
                        }
                    </div>
                    
                    <!-- Welcome Text -->
                    <div>
                        <h1 class="text-3xl font-bold text-orange-600 mb-2">Welcome, @ViewBag.FullName!</h1>
                        <p class="text-gray-600">@ViewBag.Role Dashboard</p>
                    </div>
                </div>
                <div class="flex space-x-3">
                    <a asp-action="EditProfile" class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded transition">
                        Edit Profile
                    </a>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                        <button type="submit" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded transition">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Debug Information -->
        @if (TempData["DebugInfo"] != null)
        {
            <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-3 rounded mb-6">
                Debug: @TempData["DebugInfo"]
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            @{
                var currentStay = ViewBag.CurrentStay as StayShare.Models.RoomOccupancy;
                var roommates = ViewBag.Roommates as List<StayShare.Models.User>;
            }
            @if (currentStay != null)
            {
                <div class="bg-white shadow-md rounded-lg p-6 lg:col-span-2">
                    <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10.707 2.293a1 1 0 00-1.414 0L2 9.586V18a2 2 0 002 2h3a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1h3a2 2 0 002-2V9.586l-7.293-7.293z" />
                        </svg>
                        Current Stay
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div>
                            <div class="text-sm text-gray-500">Property</div>
                            <div class="text-gray-800 font-medium">@currentStay.Room?.Property?.Name</div>
                        </div>
                        <div>
                            <div class="text-sm text-gray-500">Room</div>
                            <div class="text-gray-800 font-medium">#@currentStay.Room?.RoomNumber (@currentStay.Room?.RoomType)</div>
                        </div>
                        <div>
                            <div class="text-sm text-gray-500">Joined</div>
                            <div class="text-gray-800 font-medium">@((currentStay.JoinedAt ?? currentStay.RequestedAt).ToString("yyyy-MM-dd"))</div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <div class="text-sm text-gray-500 mb-1">Roommates</div>
                        @if (roommates != null && roommates.Any())
                        {
                            <div class="flex flex-wrap gap-2">
                                @foreach (var mate in roommates)
                                {
                                    <span class="bg-gray-100 text-gray-800 text-sm px-2 py-1 rounded">@mate.FullName (@mate.Email)</span>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-gray-600">No roommates found.</div>
                        }
                    </div>
                </div>
            }
            <!-- Basic Information Card -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                    Basic Information
                </h2>
                <div class="space-y-3">
                    <div>
                        <label class="text-sm font-medium text-gray-500">Full Name</label>
                        <p class="text-gray-800">@(user?.FullName ?? ViewBag.FullName ?? "Not available")</p>
                    </div>
                    <div>
                        <label class="text-sm font-medium text-gray-500">Email</label>
                        <p class="text-gray-800">@(user?.Email ?? ViewBag.Email ?? "Not available")</p>
                    </div>
                    <div>
                        <label class="text-sm font-medium text-gray-500">Role</label>
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-orange-100 text-orange-800">
                            @(user?.Role ?? ViewBag.Role ?? "Not available")
                        </span>
                    </div>
                    <div>
                        <label class="text-sm font-medium text-gray-500">Member Since</label>
                        <p class="text-gray-800">
                            @{
                                var createdDate = user?.CreatedAt ?? ViewBag.UserCreatedAt as DateTime?;
                            }
                            @if (createdDate.HasValue && createdDate.Value != DateTime.MinValue)
                            {
                                @createdDate.Value.ToString("MMMM dd, yyyy")
                            }
                            else
                            {
                                <text>Not available</text>
                            }
                        </p>
                    </div>
                </div>
            </div>

            <!-- Profile Information Card -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"></path>
                    </svg>
                    Profile Information
                </h2>
                @if (profile != null)
                {
                    <div class="space-y-3">
                        <div>
                            <label class="text-sm font-medium text-gray-500">Gender</label>
                            <p class="text-gray-800">@profile.Gender</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">Date of Birth</label>
                            <p class="text-gray-800">@profile.DateOfBirth.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">Contact Number</label>
                            <p class="text-gray-800">@profile.ContactNumber</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">Bio</label>
                            <p class="text-gray-800">@(string.IsNullOrEmpty(profile.Bio) ? "Not provided" : profile.Bio)</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">College Verified</label>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(profile.IsCollegeVerified ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                @(profile.IsCollegeVerified ? "Verified" : "Not Verified")
                            </span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <svg class="w-12 h-12 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        <p class="text-gray-500 mb-4">No profile information available</p>
                        <a asp-action="EditProfile" class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded transition">
                            Create Profile
                        </a>
                    </div>
                }
            </div>

            <!-- Preferences Card -->
            @if (profile != null)
            {
                <div class="bg-white shadow-md rounded-lg p-6">
                    <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"></path>
                        </svg>
                        Preferences
                    </h2>
                    <div class="space-y-3">
                        <div>
                            <label class="text-sm font-medium text-gray-500">Preferred Gender</label>
                            <p class="text-gray-800">@(string.IsNullOrEmpty(profile.PreferredGender) ? "Not specified" : profile.PreferredGender)</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">Max Budget</label>
                            <p class="text-gray-800">₹@profile.MaxBudget.ToString("N0")</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">Preferred Location</label>
                            <p class="text-gray-800">@(string.IsNullOrEmpty(profile.PreferredLocation) ? "Not specified" : profile.PreferredLocation)</p>
                        </div>
                        <div>
                            <label class="text-sm font-medium text-gray-500">Interests</label>
                            <p class="text-gray-800">@(string.IsNullOrEmpty(profile.Interests) ? "Not specified" : profile.Interests)</p>
                        </div>
                    </div>
                </div>
            }

            <!-- Quick Actions Card -->
            <div class="bg-white shadow-md rounded-lg p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-orange-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd"></path>
                    </svg>
                    Quick Actions
                </h2>
                <div class="space-y-3">
                    @if (ViewBag.Role == "Host")
                    {
                        <a href="/Property" class="block w-full bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition text-center">
                            Manage Properties
                        </a>
                    }
                    @if (ViewBag.Role == "Resident")
                    {
                        <a href="/Property/Search" class="block w-full bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition text-center">
                            Browse Properties
                        </a>
                        <a href="#" class="block w-full bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded transition text-center">
                            My Bookings
                        </a>
                    }
                    @if (ViewBag.Role == "Guardian")
                    {
                        <a href="#" class="block w-full bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition text-center">
                            Link with Child
                        </a>
                        <a href="#" class="block w-full bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded transition text-center">
                            Monitor Child's Stay
                        </a>
                    }
                    <a asp-action="EditProfile" class="block w-full bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded transition text-center">
                        Update Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
