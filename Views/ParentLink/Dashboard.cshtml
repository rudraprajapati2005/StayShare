@model IEnumerable<StayShare.Models.ParentLink>
@{
    ViewData["Title"] = "Guardian Dashboard";
    var currentUser = ViewBag.CurrentUser as StayShare.Models.User;
    var acceptedLinks = ViewBag.AcceptedLinks as IEnumerable<StayShare.Models.ParentLink>;
}

<link rel="stylesheet" href="~/css/guardian-dashboard.css" />

<div class="container mt-4 gd-container">
    <div class="gd-header d-flex justify-content-between align-items-center">
        <h2><i class="fas fa-tachometer-alt"></i> Guardian Dashboard</h2>
        <div class="gd-actions">
            <a href="@Url.Action("Index", "ParentLink")" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-inbox"></i> Requests
            </a>
        </div>
    </div>

    <div>
        @if (acceptedLinks != null && acceptedLinks.Any())
            {
                <div class="gd-grid">
                    @foreach (var link in acceptedLinks)
                    {
                        <div class="gd-col-4">
                            <div class="gd-card h-100">
                                <div class="gd-card-header">
                                    <i class="fas fa-user"></i>
                                    <strong>@link.Child.FullName</strong>
                                    <span class="ms-auto gd-pill">Linked @link.LinkedAt?.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="gd-card-body">
                                    <p class="gd-meta"><strong>Relationship:</strong> @link.RelationshipType</p>
                                    <p class="gd-meta"><strong>Email:</strong> @link.Child.Email</p>
                                    @{
                                        var currentStay = link.Child.RoomOccupancies?.FirstOrDefault(o => o.IsActive && o.JoinedAt.HasValue && o.JoinedAt.Value <= DateTime.UtcNow);
                                    }
                                    @if (currentStay != null)
                                    {
                                        <div class="gd-alert-info">
                                            <strong>Current Stay</strong><br>
                                            Room #@currentStay.Room?.RoomNumber â€” @currentStay.Room?.Property?.Name<br>
                                            <span class="gd-muted">Since @currentStay.JoinedAt?.ToString("MMM dd, yyyy")</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="gd-alert-warn">
                                            <strong>No current accommodation</strong>
                                        </div>
                                    }
                                </div>
                                <div class="gd-card-footer">
                                    <a href="@Url.Action("ChildDetails", "ParentLink", new { id = link.ParentLinkId })" class="btn btn-sm btn-outline-primary w-100">
                                        <i class="fas fa-eye"></i> View Full Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="gd-empty">
                    <i class="fas fa-users fa-3x mb-2"></i>
                    <h4>No linked children yet</h4>
                    <p>When a resident links with you, they will appear here.</p>
                </div>
            }
        <!-- Quick Stats -->
        @if (acceptedLinks != null && acceptedLinks.Any())
        {
            <div class="gd-stats">
                <div class="gd-stat">
                    <p class="gd-number text-success">@acceptedLinks.Count()</p>
                    <p class="gd-label">Linked Children</p>
                </div>
                <div class="gd-stat">
                    <p class="gd-number text-info">@acceptedLinks.Count(l => l.Child.RoomOccupancies?.Any(o => o.IsActive && o.JoinedAt.HasValue && o.JoinedAt.Value <= DateTime.UtcNow) == true)</p>
                    <p class="gd-label">Currently Staying</p>
                </div>
                <div class="gd-stat">
                    <p class="gd-number">@acceptedLinks.Count(l => l.Child.RoomOccupancies?.Any(o => o.IsActive && o.JoinedAt.HasValue && o.JoinedAt.Value <= DateTime.UtcNow) != true)</p>
                    <p class="gd-label">Not Staying</p>
                </div>
                <div class="gd-stat">
                    <p class="gd-number">@acceptedLinks.Count(l => l.RelationshipType == StayShare.Models.RelationshipType.Mother || l.RelationshipType == StayShare.Models.RelationshipType.Father)</p>
                    <p class="gd-label">Direct Children</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/guardian-dashboard.js"></script>
}

