@model StayShare.Models.ParentLink
@{
    ViewData["Title"] = "Send Request to Resident";
    var currentUser = ViewBag.CurrentUser as StayShare.Models.User;
    var residents = ViewBag.Residents as IEnumerable<StayShare.Models.User>;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-link"></i> Send Request to Resident
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="CreateFromParent" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label class="form-label">Resident Email</label>
                            <input type="email" name="childEmail" class="form-control" placeholder="resident@example.com" required />
                            <span class="text-danger" data-valmsg-for="childEmail" data-valmsg-replace="true"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RelationshipType" class="form-label">Relationship</label>
                            <select asp-for="RelationshipType" class="form-select" required>
                                <option value="">-- Select Relationship --</option>
                                <option value="@StayShare.Models.RelationshipType.Mother">Mother</option>
                                <option value="@StayShare.Models.RelationshipType.Father">Father</option>
                                <option value="@StayShare.Models.RelationshipType.Sister">Sister</option>
                                <option value="@StayShare.Models.RelationshipType.Brother">Brother</option>
                                <option value="@StayShare.Models.RelationshipType.Guardian">Guardian</option>
                                <option value="@StayShare.Models.RelationshipType.Other">Other</option>
                            </select>
                            <span asp-validation-for="RelationshipType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Message" class="form-label">Message (Optional)</label>
                            <textarea asp-for="Message" class="form-control" rows="3" 
                                      placeholder="Add a personal message to your parent link request..."></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "ParentLink")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Send Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

