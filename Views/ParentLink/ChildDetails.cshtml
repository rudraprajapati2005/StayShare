@model StayShare.Models.ParentLink
@{
    ViewData["Title"] = "Child Details";
    var parentLink = ViewBag.ParentLink as StayShare.Models.ParentLink;
    var currentStay = ViewBag.CurrentStay as StayShare.Models.RoomOccupancy;
    var pastStays = ViewBag.PastStays as IEnumerable<StayShare.Models.RoomOccupancy>;
    var roommates = ViewBag.Roommates as IEnumerable<StayShare.Models.User>;
    var currentUser = ViewBag.CurrentUser as StayShare.Models.User;
}

<link rel="stylesheet" href="~/css/guardian-dashboard.css" />

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="gd-header d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user"></i> @parentLink.Child.FullName - Details</h2>
                <a href="@Url.Action("Dashboard", "ParentLink")" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Back to Dashboard
                </a>
            </div>

            <!-- Child Information -->
            <div class="gd-card mb-4">
                <div class="gd-card-header" style="background:#3b82f6">
                    <i class="fas fa-info-circle"></i>
                    <strong>Basic Information</strong>
                </div>
                <div class="gd-card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Full Name:</strong> @parentLink.Child.FullName</p>
                            <p><strong>Email:</strong> @parentLink.Child.Email</p>
                            <p><strong>Role:</strong> @parentLink.Child.Role</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Relationship:</strong> @parentLink.RelationshipType</p>
                            <p><strong>Linked Since:</strong> @parentLink.LinkedAt?.ToString("MMM dd, yyyy HH:mm")</p>
                            <p><strong>Account Created:</strong> @parentLink.Child.CreatedAt.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Current Stay -->
            @if (currentStay != null)
            {
                <div class="gd-card mb-4">
                    <div class="gd-card-header">
                        <i class="fas fa-home"></i>
                        <strong>Current Accommodation</strong>
                    </div>
                    <div class="gd-card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Property Details</h6>
                                <p><strong>Property:</strong> @currentStay.Room?.Property?.Name</p>
                                <p><strong>Address:</strong> @currentStay.Room?.Property?.Address</p>
                                <p><strong>Room Number:</strong> @currentStay.Room?.RoomNumber</p>
                                <p><strong>Room Type:</strong> @currentStay.Room?.RoomType</p>
                                <p><strong>Capacity:</strong> @currentStay.Room?.Capacity persons</p>
                            </div>
                            <div class="col-md-6">
                                <h6>Stay Information</h6>
                                <p><strong>Move-in Date:</strong> @currentStay.JoinedAt?.ToString("MMM dd, yyyy")</p>
                                <p><strong>Expected Exit:</strong> @currentStay.ExitDate?.ToString("MMM dd, yyyy")</p>
                                <p><strong>Status:</strong> 
                                    <span class="badge bg-success">Active</span>
                                </p>
                                @if (!string.IsNullOrEmpty(currentStay.Room?.Amenities))
                                {
                                    <p><strong>Amenities:</strong> @currentStay.Room.Amenities</p>
                                }
                            </div>
                        </div>

                        <!-- Current Roommates -->
                        @if (roommates != null && roommates.Any())
                        {
                            <hr>
                            <h6>Current Roommates</h6>
                            <div class="row">
                                @foreach (var roommate in roommates)
                                {
                                    <div class="col-md-4 mb-2">
                                        <div class="border rounded p-2">
                                            <strong>@roommate.FullName</strong><br>
                                            <small class="text-muted">@roommate.Email</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <hr>
                            <p class="text-muted"><i class="fas fa-info-circle"></i> No other roommates currently staying in this room.</p>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="gd-card mb-4">
                    <div class="gd-card-header" style="background:#f59e0b">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>No Current Accommodation</strong>
                    </div>
                    <div class="gd-card-body">
                        <p class="mb-0">@parentLink.Child.FullName is not currently staying in any accommodation.</p>
                    </div>
                </div>
            }

            <!-- Past Stays -->
            @if (pastStays != null && pastStays.Any())
            {
                <div class="gd-card mb-4">
                    <div class="gd-card-header" style="background:#06b6d4">
                        <i class="fas fa-history"></i>
                        <strong>Past Accommodations (@pastStays.Count())</strong>
                    </div>
                    <div class="gd-card-body">
                        @foreach (var stay in pastStays)
                        {
                            <div class="border rounded p-3 mb-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>@stay.Room?.Property?.Name - Room #@stay.Room?.RoomNumber</h6>
                                        <p class="mb-1"><strong>Address:</strong> @stay.Room?.Property?.Address</p>
                                        <p class="mb-1"><strong>Room Type:</strong> @stay.Room?.RoomType</p>
                                        <p class="mb-1"><strong>Capacity:</strong> @stay.Room?.Capacity persons</p>
                                    </div>
                                    <div class="col-md-6">
                                        <p class="mb-1"><strong>Stayed From:</strong> @stay.JoinedAt?.ToString("MMM dd, yyyy")</p>
                                        <p class="mb-1"><strong>Stayed Until:</strong> @stay.ExitDate?.ToString("MMM dd, yyyy")</p>
                                        <p class="mb-1"><strong>Status:</strong> 
                                            @switch (stay.Status)
                                            {
                                                case StayShare.Models.OccupancyStatus.Accepted:
                                                    <span class="badge bg-success">Completed</span>
                                                    break;
                                                case StayShare.Models.OccupancyStatus.Left:
                                                    <span class="badge bg-info">Left</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@stay.Status</span>
                                                    break;
                                            }
                                        </p>
                                        @if (!string.IsNullOrEmpty(stay.Room?.Amenities))
                                        {
                                            <p class="mb-1"><strong>Amenities:</strong> @stay.Room.Amenities</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
            else if (currentStay == null)
            {
                <div class="gd-card mb-4">
                    <div class="gd-card-header" style="background:#6b7280">
                        <i class="fas fa-info-circle"></i>
                        <strong>No Past Accommodations</strong>
                    </div>
                    <div class="gd-card-body">
                        <p class="mb-0">@parentLink.Child.FullName has no past accommodation history.</p>
                    </div>
                </div>
            }

            <!-- Summary Statistics -->
            <div class="gd-stats">
                <div class="gd-stat">
                    <p class="gd-number text-primary">@(pastStays?.Count() ?? 0)</p>
                    <p class="gd-label">Total Past Stays</p>
                </div>
                <div class="gd-stat">
                    <p class="gd-number text-success">@(currentStay != null ? 1 : 0)</p>
                    <p class="gd-label">Current Stay</p>
                </div>
                <div class="gd-stat">
                    <p class="gd-number text-info">@(roommates?.Count() ?? 0)</p>
                    <p class="gd-label">Current Roommates</p>
                </div>
                <div class="gd-stat">
                    <p class="gd-number">@parentLink.RelationshipType</p>
                    <p class="gd-label">Relationship</p>
                </div>
            </div>
        </div>
    </div>
</div>

