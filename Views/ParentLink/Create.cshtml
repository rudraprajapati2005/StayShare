@model StayShare.Models.ParentLink
@{
    ViewData["Title"] = "Send Parent Link Request";
    var currentUser = ViewBag.CurrentUser as StayShare.Models.User;
    var parents = ViewBag.Parents as IEnumerable<StayShare.Models.User>;
}

<link rel="stylesheet" href="~/css/parentlink.css" />

<div class="container pl-page">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="pl-hero">
                <i class="fas fa-user-shield fa-lg"></i>
                <div>
                    <h3>Send Parent Link Request</h3>
                    <p>Enter your guardian's email, choose the relationship, and add an optional note.</p>
                </div>
            </div>
            <div class="pl-card">
                <div class="pl-card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-link"></i> Send Parent Link Request
                    </h4>
                </div>
                <div class="pl-card-body">
                    <div class="row">
                        <div class="col-md-7">
                    <!-- Simplified: no search/list -->

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Create" method="post" id="pl-create-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3 pl-input-wrap">
                            <label class="pl-label">Guardian Email</label>
                            <i class="fas fa-envelope pl-leading-icon"></i>
                            <input type="email" name="parentEmail" class="pl-input" placeholder="guardian@example.com" required />
                            <span class="text-danger" data-valmsg-for="parentEmail" data-valmsg-replace="true"></span>
                        </div>
                        

                        <div class="mb-3">
                            <label asp-for="RelationshipType" class="pl-label">Relationship</label>
                            <select asp-for="RelationshipType" class="pl-select" required>
                                <option value="">-- Select Relationship --</option>
                                <option value="@StayShare.Models.RelationshipType.Mother">Mother</option>
                                <option value="@StayShare.Models.RelationshipType.Father">Father</option>
                                <option value="@StayShare.Models.RelationshipType.Sister">Sister</option>
                                <option value="@StayShare.Models.RelationshipType.Brother">Brother</option>
                                <option value="@StayShare.Models.RelationshipType.Guardian">Guardian</option>
                                <option value="@StayShare.Models.RelationshipType.Other">Other</option>
                            </select>
                            <span asp-validation-for="RelationshipType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Message" class="pl-label">Message (Optional)</label>
                            <textarea asp-for="Message" class="pl-textarea" rows="3" 
                                      placeholder="Add a personal message to your parent link request..."></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", "ParentLink")" class="pl-btn pl-btn-secondary me-md-2">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="pl-btn pl-btn-primary">
                                <i class="fas fa-paper-plane"></i> Send Request
                            </button>
                        </div>
                    </form>
                        </div>
                        <div class="col-md-5">
                            <div class="pl-divider"></div>
                            <ul class="pl-hint-list">
                                <li><i class="fas fa-check-circle"></i><span>We’ll notify your guardian by email.</span></li>
                                <li><i class="fas fa-check-circle"></i><span>Only Guardians can accept or decline.</span></li>
                                <li><i class="fas fa-check-circle"></i><span>You can delete pending requests anytime.</span></li>
                            </ul>
                            <p class="pl-muted mt-2">Tip: Use the same email your guardian used during signup.</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Listing removed for simplified flow -->

            @{ var pending = ViewBag.PendingRequests as IEnumerable<StayShare.Models.ParentLink>; }
            @if (pending != null && pending.Any())
            {
                <div class="pl-card mt-4">
                    <div class="pl-card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-hourglass-half"></i> Your Pending Requests
                        </h5>
                    </div>
                    <div class="pl-card-body">
                        <ul class="list-group">
                            @foreach (var pr in pending)
                            {
                                var otherUser = pr.ParentId == currentUser.UserId ? pr.Child : pr.Parent;
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        @otherUser?.FullName (@otherUser?.Email)
                                        <small class="text-muted"> · @pr.RequestedAt.ToLocalTime().ToString("MMM dd, yyyy HH:mm")</small>
                                    </span>
                                    <span class="badge bg-warning text-dark">Pending</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/parentlink-create.js"></script>
}

