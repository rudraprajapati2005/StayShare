@{
    ViewData["Title"] = "Sign In - StayShare";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-3xl font-bold text-orange-500 text-center mb-6">Sign In</h2>

        @* Error messages section *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-4 text-red-600 bg-red-100 border border-red-300 p-4 rounded">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-controller="Auth" asp-action="Login" method="post" class="space-y-4" id="loginForm">
            @Html.AntiForgeryToken()
            
            <div>
                <label class="block text-gray-700 mb-1 font-medium" for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="you@example.com" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                <span class="text-red-500 text-sm" id="emailError"></span>
            </div>

            <div>
                <label class="block text-gray-700 mb-1 font-medium" for="password">Password</label>
                <input type="password" name="password" id="password" placeholder="********" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                <span class="text-red-500 text-sm" id="passwordError"></span>
            </div>

            <div>
                <button type="submit" id="submitBtn"
                        class="w-full bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-md transition disabled:opacity-50 disabled:cursor-not-allowed">
                    Sign In
                </button>
            </div>
        </form>

        <p class="text-gray-600 text-center mt-4">
            Don't have an account?
            <a href="/Auth/Register" class="text-orange-500 hover:underline">Sign Up</a>
        </p>
    </div>
</div>

@section Scripts {
    <script src="~/js/login-validation.js"></script>
}
