@{
    ViewData["Title"] = "Profile";
}

<div class="mt-20 max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-orange-600 mb-4">Your Profile</h1>

    <div class="bg-white shadow p-6 rounded mb-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div><span class="font-semibold">Name:</span> @ViewBag.FullName</div>
            <div><span class="font-semibold">Email:</span> @ViewBag.Email</div>
            <div><span class="font-semibold">Role:</span> @ViewBag.Role</div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <a href="/Home/EditProfile" class="block bg-orange-50 border border-orange-200 rounded p-5 hover:bg-orange-100">
            <h2 class="text-lg font-semibold text-orange-700 mb-1">Edit Profile</h2>
            <p class="text-sm text-gray-700">Update your basic info, preferences, and profile picture.</p>
        </a>
        @if (string.Equals(ViewBag.Role as string, "Host", System.StringComparison.OrdinalIgnoreCase) || string.Equals(ViewBag.Role as string, "Owner", System.StringComparison.OrdinalIgnoreCase))
        {
            <a href="/Property" class="block bg-blue-50 border border-blue-200 rounded p-5 hover:bg-blue-100">
                <h2 class="text-lg font-semibold text-blue-700 mb-1">Manage Properties</h2>
                <p class="text-sm text-gray-700">Create, edit, and manage your property listings and rooms.</p>
            </a>
        }
        else
        {
            <a href="/Property/Search" class="block bg-green-50 border border-green-200 rounded p-5 hover:bg-green-100">
                <h2 class="text-lg font-semibold text-green-700 mb-1">Find Stays</h2>
                <p class="text-sm text-gray-700">Search PGs, hostels, and hotels near your location.</p>
            </a>
        }
    </div>
</div>


