@model StayShare.Models.User
@{
    ViewData["Title"] = "Sign Up - StayShare";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-3xl font-bold text-orange-500 text-center mb-6">Create Your Account</h2>

        @* Error messages section *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-4 text-red-600 bg-red-100 border border-red-300 p-4 rounded">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-controller="Auth" asp-action="Register" method="post" class="space-y-4" id="registerForm">
            @Html.AntiForgeryToken()

            <div>
                <label asp-for="FullName" class="block text-gray-700 mb-1 font-medium"></label>
                <input asp-for="FullName" placeholder="John Doe" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-gray-700 mb-1 font-medium"></label>
                <input asp-for="Email" type="email" placeholder="you@example.com" required
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="PasswordHash" class="block text-gray-700 mb-1 font-medium">Password</label>
                <input asp-for="PasswordHash" type="password" placeholder="********" required minlength="6"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-orange-500 focus:ring-2 focus:ring-orange-200" />
                <span asp-validation-for="PasswordHash" class="text-red-500 text-sm"></span>
                <p class="text-gray-500 text-xs mt-1">Password must be at least 6 characters long</p>
            </div>

            <div>
                <label class="block text-gray-700 mb-2 font-medium">I am a:</label>
                <div class="space-y-3">
                    <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-md hover:bg-gray-50 cursor-pointer">
                        <input type="radio" asp-for="Role" value="Host" class="accent-orange-500" required />
                        <div>
                            <div class="font-medium">Room Owner (Host)</div>
                            <div class="text-sm text-gray-600">I own properties and rent them out</div>
                        </div>
                    </label>

                    <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-md hover:bg-gray-50 cursor-pointer">
                        <input type="radio" asp-for="Role" value="Resident" class="accent-orange-500" required />
                        <div>
                            <div class="font-medium">Resident</div>
                            <div class="text-sm text-gray-600">I am looking for accommodation</div>
                        </div>
                    </label>

                    <label class="flex items-center gap-3 p-3 border border-gray-200 rounded-md hover:bg-gray-50 cursor-pointer">
                        <input type="radio" asp-for="Role" value="Guardian" class="accent-orange-500" required />
                        <div>
                            <div class="font-medium">Guardian</div>
                            <div class="text-sm text-gray-600">Link with your child to monitor their stay</div>
                        </div>
                    </label>
                </div>
                <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <button type="submit" id="submitBtn"
                        class="w-full bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-md transition disabled:opacity-50 disabled:cursor-not-allowed">
                    Sign Up
                </button>
            </div>
        </form>

        <p class="text-gray-600 text-center mt-4">
            Already have an account?
            <a href="/Auth/Login" class="text-orange-500 hover:underline">Sign In</a>
        </p>
    </div>
</div>

@section Scripts {
        <script src="~/js/register-validation.js"></script>
}