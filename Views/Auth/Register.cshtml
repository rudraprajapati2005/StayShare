@model StayShare.Models.User
@{
    ViewData["Title"] = "Sign Up - StayShare";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
    <div class="max-w-md w-full bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-3xl font-bold text-orange-500 text-center mb-6">Create Your Account</h2>

        @* 🔥 Error messages section *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-4 text-red-600 bg-red-100 border border-red-300 p-4 rounded">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form asp-controller="Auth" asp-action="Register" method="post" class="space-y-4">
            @Html.AntiForgeryToken()

            <div>
                <label asp-for="FullName" class="block text-gray-700 mb-1"></label>
                <input asp-for="FullName" placeholder="John Doe"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-orange-500" />
                <span asp-validation-for="FullName" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-gray-700 mb-1"></label>
                <input asp-for="Email" type="email" placeholder="you@example.com"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-orange-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="PasswordHash" class="block text-gray-700 mb-1">Password</label>
                <input asp-for="PasswordHash" type="password" placeholder="********"
                       class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-orange-500" />
                <span asp-validation-for="PasswordHash" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label class="block text-gray-700 mb-2">I am a:</label>
                <div class="flex items-center gap-6">
                    <label class="flex items-center gap-2">
                        <input type="radio" asp-for="Role" value="Owner" class="accent-orange-500" />
                        Room Owner
                    </label>
                    <label class="flex items-center gap-2">
                        <input type="radio" asp-for="Role" value="Student" class="accent-orange-500" />
                        Looking for Stay
                    </label>
                </div>
                <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <button type="submit"
                        class="w-full bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-md transition">
                    Sign Up
                </button>
            </div>
        </form>

        <p class="text-gray-600 text-center mt-4">
            Already have an account?
            <a href="/Auth/Login" class="text-orange-500 hover:underline">Sign In</a>
        </p>
    </div>
</div>
